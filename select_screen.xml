<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:color="@color/white"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pictovie.beta.pictovie.SelectScreen">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleWidth="120%"
        app:popupTheme="@style/Theme.AppCompat.NoActionBar"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical">
        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/title_text"/>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- The navigation drawer -->
        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/opencamera"
            android:src="@mipmap/opencamera"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="112dp"
            android:layout_marginTop="1dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/pic03"
            android:src="@mipmap/pic03"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="101dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="113dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/pic01"
            android:src="@mipmap/pic01"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="143dp"
            android:layout_marginTop="288dp"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic02"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="143dp"
            android:layout_marginTop="380dp"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic11"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="288dp"
            android:layout_marginTop="288dp"
            android:layout_marginLeft="145dp"
            android:layout_height="183dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic04"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="216dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic05"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="101dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="319dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic07"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="288dp"
            android:layout_marginTop="103dp"
            android:layout_height="183dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic08"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="161dp"
            android:layout_marginTop="103dp"
            android:layout_marginLeft="290dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic06"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="205dp"
            android:layout_marginTop="473dp"
            android:layout_marginLeft="207dp"
            android:layout_height="131dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic09"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="205dp"
            android:layout_marginTop="473dp"
            android:layout_height="131dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:src="@mipmap/pic10"
            android:scaleWidth="150%"
            android:adjustViewBounds="true"
            android:layout_width="161dp"
            android:layout_marginTop="194dp"
            android:layout_marginLeft="290dp"
            android:layout_height="91dp"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>
    </ScrollView>
    <SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:handle="@+id/handle"
        android:content="@+id/content">

        <ImageView
            android:id="@id/handle"
            android:layout_width="88dip"
            android:layout_height="44dip" />

        <GridView
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </SlidingDrawer>
</android.support.constraint.ConstraintLayout>
