<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pictovie.beta.pictovie.NewForPlusScreen">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="35dp"
        android:scaleWidth="120%"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        >
        <ImageView
            android:src="@mipmap/title"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:src="@mipmap/description"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:id="@+id/pictos1"
            android:src="@mipmap/pictos"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="122dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:id="@+id/adminphoto"
            android:src="@mipmap/tagpeople"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="275dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:id="@+id/duration"
            android:src="@mipmap/duration"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="435dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:id="@+id/addpicto"
            android:src="@mipmap/addpicto"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="85dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="177dp"
            android:layout_height="80dp"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <ImageView
            android:id="@+id/addpictoadmin"
            android:src="@mipmap/addpicto"
            android:scaleWidth="100%"
            android:adjustViewBounds="true"
            android:layout_width="85dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="312dp"
            android:layout_height="80dp"
            android:scaleType="fitStart"
            android:layout_marginBottom="150dp" />
        <EditText
            android:id="@+id/collaborators"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D1D3D4"
            android:drawablePadding="8dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:paddingTop="10dp"
            android:layout_marginTop="265dp"
            android:textColor="#D1D3D4"
            android:text="Collaborators"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="#D1D3D4"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/durationtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D1D3D4"
            android:drawablePadding="8dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:paddingTop="10dp"
            android:layout_marginTop="425dp"
            android:textColor="#D1D3D4"
            android:text="Duration"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="#D1D3D4"
            android:textSize="16sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="164dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="107dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="600dp"
            android:layout_marginTop="50dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="265dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="420dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="600dp"
            android:layout_marginTop="475dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
    <EditText
        android:id="@+id/pictovietitle"
        android:backgroundTint="#D1D3D4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:inputType="textCapWords"
        android:text="Pictovie Title"
        android:background="@android:color/transparent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:textColor="#D1D3D4"
        android:maxLines="1"
        android:textColorHint="#D1D3D4"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/description"
        android:backgroundTint="#D1D3D4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_marginTop="60dp"
        android:textColor="#D1D3D4"
        android:layout_marginLeft="60dp"
        android:text="Description"
        android:ems="10"
        android:singleLine="true"
        android:maxLines="1"
        android:textColorHint="#D1D3D4"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/pictos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D1D3D4"
        android:drawablePadding="8dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:paddingTop="10dp"
        android:layout_marginTop="110dp"
        android:textColor="#D1D3D4"
        android:text="Pictos"
        android:singleLine="true"
        android:maxLines="1"
        android:textColorHint="#D1D3D4"
        android:textSize="16sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
