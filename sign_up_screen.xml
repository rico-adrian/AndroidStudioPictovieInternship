<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pictovie.beta.pictovie.SignUpScreen">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleWidth="120%"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        >
        <Button
            android:id="@+id/signupbutton"
            android:layout_marginTop="579dp"
            android:singleLine="true"
            android:text="Sign Up"
            style="?android:attr/buttonStyleSmall"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:textColor="@color/white"
            android:background="#00dbde"
            />
        <EditText
            android:id="@+id/email"
            android:backgroundTint="#D1D3D4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:paddingLeft="30dp"
            android:text="Email"
            android:background="@android:color/transparent"
            android:layout_marginTop="420dp"
            android:textColor="#D1D3D4"
            android:maxLines="1"
            android:textColorHint="#D1D3D4"
            android:textSize="16sp" />
        <View
            android:layout_width="500dp"
            android:layout_marginTop="410dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="453dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="498dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="544dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <EditText
            android:id="@+id/password"
            android:backgroundTint="#D1D3D4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:layout_marginTop="456dp"
            android:textColor="#D1D3D4"
            android:paddingLeft="30dp"
            android:text="Password"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="#D1D3D4"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/repeatPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D1D3D4"
            android:drawablePadding="8dp"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:layout_marginTop="502dp"
            android:textColor="#D1D3D4"
            android:text="Repeat Password"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:maxLines="1"
            android:textColorHint="#D1D3D4"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/text1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="310dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="8pt"
            android:textColor="#939598"
            android:text="LOGIN"/>
        <TextView
            android:id="@+id/text2"
            android:layout_marginLeft="260dp"
            android:layout_marginBottom="250dp"
            android:layout_width="fill_parent"
            android:gravity="top"
            android:layout_marginTop="15dp"
            android:layout_height="fill_parent"
            android:text="SIGN UP"
            android:textColor="#939598"
            android:textSize="8pt"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Pictovie"
        android:paddingTop="100dp"
        android:paddingLeft="55dp"
        android:gravity="center"
        android:textSize="14pt"
        android:textColor="#939598"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/icon0"
        android:scaleType="centerCrop"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="160dp"
        tools:layout_editor_absoluteY="38dp"
        tools:layout_editor_absoluteX="0dp" />
    <EditText
        android:id="@+id/username"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="330dp"
        android:paddingLeft="157dp"
        android:gravity="center_vertical"
        android:textSize="7pt"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="#d1d3d4"
        android:textColorHint="#D1D3D4"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
