<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.pictovie.beta.pictovie.MenuSidebarScreen">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="match_parent"
        android:scaleWidth="120%"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@mipmap/user01"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/homelink"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/home"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/profilelink"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/profile"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/activitylink"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/activity"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/vrmodelink"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon0"
            android:layout_marginTop="365dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/settingslink"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@mipmap/setting"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/emmawatson"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:paddingLeft="65dp"
            android:text="Emma Watson"
            android:textColor="#939598"
            android:layout_marginTop="50dp"/>
        <View
            android:layout_width="600dp"
            android:layout_marginTop="145dp"
            android:layout_height="1dp"
            android:background="#d1d3d4" />
        <TextView
            android:id="@+id/hometextlink"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="HOME"
            android:textColor="#939598"
            android:layout_marginTop="193dp"/>
        <TextView
            android:id="@+id/profiletextlink"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="PROFILE"
            android:textColor="#939598"
            android:layout_marginTop="259dp"/>
        <TextView
            android:id="@+id/activitytextlink"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="ACTIVITY"
            android:textColor="#939598"
            android:layout_marginTop="325dp"/>
        <TextView
            android:id="@+id/vrmodetextlink"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="VR MODE"
            android:textColor="#939598"
            android:layout_marginTop="390dp"/>
        <TextView
            android:id="@+id/settingstextlink"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="SETTINGS"
            android:textColor="#939598"
            android:layout_marginTop="455dp"/>
        <TextView
            android:id="@+id/logouttextlink"
            android:layout_marginLeft="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="Logout"
            android:textColor="#00dbde"
            android:layout_marginTop="553dp"/>
    </RelativeLayout>



    </android.support.constraint.ConstraintLayout>

